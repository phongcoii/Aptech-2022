#include <stdio.h>
#include <math.h>

void main()
{
    char option;
    int a = 0 , b = 0 ;
    int sum, min, multi, division;
    int sida;

 
    do
    {
        printf("nhap so a : ");
        scanf("%d", &a);
        printf("nhap so b : ");
        scanf("%d", &b);
        fflush(stdin);
        
        printf("Choose below function: \n 1. Input number: \n 2. Sum:\n 3. Substract:\n 4. Multi: \n 5. Division: \n 6. Exit \n");
       
        scanf("%c", &option);
       
    switch (option)
    {
        
        case '2':
            sum = a + b;
            printf("%d + %d = %d\n", a,b,sum);
            break;
        
        case '3':
            min = a - b;
            printf("%d - %d = %d\n",a,b,min);
            break;
       
        case '4':
            multi = a * b;
            printf("%d * %d = %d\n",a,b,multi);
            break;
            
        case '5':
            division = a/b;
        printf("%d / %d = %d\n", a,b,division);
            break;
    }
        printf("Others actions ?\n 1. Yes\n 2. No ");
        scanf("%d", &sida);
    }
    while (sida == 1);
    {
        printf("Exit program\n");
    }
        
    
    
}
