#include <stdio.h>
#include <stdlib.h>

int main() {
	float a,b,res;
	char op,ans;
	
	
	
   do{	
	printf("nhap so thu 1:\n");
	scanf("%f",&a);
	
	printf("nhap so thu 2:\n");
	scanf("%f",&b);

    fflush(stdin);
	
	
	printf("1:phep cong(+)   2:phep tru(-)   3:phep nhan(*)  4:phep chia(/)  5:exit(N)\n");
	scanf("%c",&op);
	
	switch(op)
	{
		case '+':
			res=a+b;
			printf("%f+%f=%f\n",a,b,res);
			break;
			
		case '-':
		   res=a-b;
		   printf("%f-%f=%f\n",a,b,res);
		   break;
		
		case '*':
		   res=a*b;
		   printf("%f*%f=%f\n",a,b,res);
		   break;
		
		case'/':
		   if(b==0){
		   printf("khong chia dc cho 0\n");}
	       res=a/b;
		   printf("%f/%f=%f\n",a,b,res);
		   break;
		   
	    default:
	    	printf("hen gap lai\n");
	    	return 0;
	    	break;
		   
	}
	     fflush(stdin);
	    printf("ban co muon lam phep tinh khac(Y/N)\n");
	    scanf("%c",&ans);
	}
	
      while(ans=='y'||ans=='Y');
      printf("hen gap lai");
	
	
	return 0;
}
