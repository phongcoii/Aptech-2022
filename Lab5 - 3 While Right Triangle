#include <stdio.h>

void main()
{
    int a;
    int b = 0 ;
    int c ;
    
    printf("Enter number of rows : ");
    scanf("%d", &a);
    
    while (b < a)
    {
       
        printf("\n");
        b++;
        c = 0;
        while (c < b)
        {
            c++;
            printf("*");
            
        }
        
    }
    printf("\n");
}
