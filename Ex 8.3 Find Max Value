#include <stdio.h>

void main()
{
    float num1, num2, num3;
    
    
    printf("Enter num 1 : ");
    scanf("%f", &num1);
    
    printf("Enter num 2 : ");
    scanf("%f", &num2);
    
    printf("Enter num 3 : ");
    scanf("%f", &num3);
    
    
    if ( num1 > num2 && num1 > num3)
        printf("Num 1 has the highest value = %.2f\n", num1);
    else if ( num2 > num1 && num2 > num3)
        printf("Num 2 has the highest value = %.2f\n", num2);
    else
        printf("Num 3 has the highest value = %.2f\n", num3);
    
}
