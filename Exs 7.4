#include <stdio.h>

int main()
{
    char grade;
    int salary;
    int allowence;
    int gross_income;
    
    printf("Wage is ");
    scanf("%d", &gross_income);
    
    printf("Employees grade is : ");
    scanf("%c", &grade);
    
    if (grade == 'A') {
        allowence = 300;
    }
    else if (grade == 'B'){
        allowence = 250;
    }
    else{
        allowence = 100;
    }
    salary = gross_income + allowence;
    printf("Employees salary is %d\n", salary);
    
    return 0;
    
}
